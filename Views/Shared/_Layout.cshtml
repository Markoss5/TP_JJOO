<!DOCTYPE html>
<html lang="en" id = "tema">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TP_JJOO</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TP_JJOO.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="sticky-top">
        <nav class="navbar navbar-expand-lg border-bottom mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" href='@Url.Action("Index", "Home")'>
                    <img src="~/Logo.svg" alt="JJOO Logo">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href='@Url.Action("Historia", "Home")'>Historia</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href='@Url.Action("Deportes", "Home")'>Deportes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href='@Url.Action("Paises", "Home")'>Países</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href='@Url.Action("Deportistas", "Home")'>Deportistas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href='@Url.Action("AgregarDeportista", "Home")'>Agregar Deportista</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href='@Url.Action("Creditos", "Home")'>Créditos</a>
                        </li>
                    </ul>
                </div>
                <button type="button" class="btn site-theme"><img src="/imgs/luna.png" alt="Tema" id="themeSelector"></button>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - TP_JJOO - Hecho por Nehuen Yair Villasanti, Tiziana Emma Mattioda, Iair Ezequiel Socha y Marco di Carlo <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
